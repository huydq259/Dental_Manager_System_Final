@model IEnumerable<Dental_Manager.System.Models.Appointment>
@using System.Web.Mvc
@{
    ViewBag.Title = "ViewAppointments";
    Layout = "/Views/Shared/ReceptionistLayout.cshtml";
    Func<TimeSpan, string> FormatTime = ts =>
       ts == TimeSpan.Zero ? "00:00" :
       $"{ts.Hours:D2}:{ts.Minutes:D2}";
}
<div class="body-wrapper-inner">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Danh Sách Lịch Hẹn</h5>
                <p class="mb-4">Quản lý các lịch hẹn của phòng khám</p>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div style="display: flex; gap: 10px; margin-top: 10px;">
                                    <nav class="navbar navbar-header-left navbar-expand-lg navbar-form nav-search p-0 d-none d-lg-flex">
                                        <div class="input-group" style="width: 500px">
                                            <div class="input-group-prepend">
                                                <button type="submit" class="btn btn-search pe-1">
                                                    <i class="fa fa-search search-icon"></i>
                                                </button>
                                            </div>
                                            <input type="text"
                                                   id="searchInput"
                                                   placeholder="Tìm kiếm theo tên hoặc số điện thoại ..."
                                                   class="form-control" />
                                        </div>
                                    </nav>
                                </div>
                            </div>
                            @if (Model != null && Model.Any())
                            {
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table id="basic-datatables"
                                               class="display table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Mã cuộc hẹn</th>
                                                    <th>Tên bệnh nhân</th>
                                                    <th>Số điện thoại</th>
                                                    <th>Bác sĩ</th>
                                                    <th>Chuẩn đoán</th>
                                                    <th>Ngày</th>
                                                    <th>Giờ</th>
                                                    <th>Trạng thái</th>
                                                    <th>Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    var doctor = ((SelectList)ViewBag.DoctorList)?.Items
                                                    .Cast<SelectListItem>()
                                                    .FirstOrDefault(d => d.Value == item.DoctorId.ToString());

                                                    <tr>
                                                        <td>@item.AppointmentId</td>
                                                        <td>@item.FullName</td>
                                                        <td>@item.Phone</td>
                                                        <td>@(doctor?.Text ?? "Không xác định")</td>
                                                        <td>@item.Dianoisis</td>
                                                        <td>@(item.AppointmentDate.ToString("dd/MM/yyyy") ?? "Chưa đặt")</td>
                                                        <td>@FormatTime(item.AppointmentTime)</td>
                                                        <td>
                                                            <span class="badge bg-warning">Lên lịch</span>
                                                        </td>
                                                        <td>
                                                            <a href="@Url.Action("UpdateAppointment", "Receptionist", new { id = item.AppointmentId })"
                                                               class="btn btn-warning btn-sm me-1" title="Sửa lịch hẹn">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>

                                                            <form method="post" action="@Url.Action("ApproveAppointment", "Receptionist", new { id = item.AppointmentId })"
                                                                  style="display: inline;" onsubmit="return confirm('Xác nhận đồng ý lịch hẹn?')">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-primary btn-sm me-1" title="Đồng ý">
                                                                    <i class="bi bi-check-lg"></i>
                                                                </button>
                                                            </form>

                                                            <form method="post" action="@Url.Action("DeleteAppointment", "Receptionist", new { id = item.AppointmentId })"
                                                                  style="display: inline;" onsubmit="return confirm('Hủy lịch hẹn này?')">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-danger btn-sm" title="Hủy">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-sm i {
        font-size: 12px;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn[title]:hover::after {
        content: attr(title);
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        background: #333;
        color: white;
        padding: 5px 10px;
        border-radius: 4px;
        font-size: 12px;
        white-space: nowrap;
        z-index: 1000;
        margin-bottom: 5px;
    }

    .btn[title]:hover::before {
        content: '';
        position: absolute;
        bottom: 100%;
        left: 50%;
        transform: translateX(-50%);
        border: 5px solid transparent;
        border-top-color: #333;
        z-index: 1000;
        margin-bottom: 0;
    }

    .input-group {
        max-width: 500px;
    }

    .form-control {
        width: 100%;
    }

    .badge {
        border-radius: 50px;
        padding: 5px 10px;
    }
</style>

<script>
    document.getElementById('searchInput').addEventListener('input', function () {
        let searchValue = this.value.toLowerCase();
        let table = document.getElementById('basic-datatables');
        let rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

        for (let i = 0; i < rows.length; i++) {
            let row = rows[i];
            let name = row.getElementsByTagName('td')[1].textContent.toLowerCase();
            let phone = row.getElementsByTagName('td')[2].textContent.toLowerCase();

            if (name.includes(searchValue) || phone.includes(searchValue)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        }
    });
</script>