@model Tuple<Dental_Manager.System.Models.User, List<Dental_Manager.System.Models.User>>

@{
    ViewBag.Title = "DanhSachKhachHang";
    Layout = "/Views/Shared/LayoutClient.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <ul class="breadcrumbs mb-3">
                <li class="nav-home"><a href="#"><i class="icon-home"></i></a></li>
                <li class="separator"><i class="icon-arrow-right"></i></li>
                <li class="nav-item"><a href="#">Quản lý Bác sĩ</a></li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="fw-bold mb-3">Tạo thông tin cho Khách hàng</h3>

                        @using (Html.BeginForm("CreatePatient", "Admin", FormMethod.Post, new { @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Item1.FullName, "Họ và Tên", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Item1.FullName, new { @class = "form-control", placeholder = "VD: Nguyễn Văn A..." })
                                @Html.ValidationMessageFor(m => m.Item1.FullName)
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Item1.Email, "Email", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Item1.Email, new { @class = "form-control", placeholder = "VD: abc@gmail.com" })
                                @Html.ValidationMessageFor(m => m.Item1.Email)
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Item1.Phone, "Số điện thoại", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Item1.Phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Item1.Phone)
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Item1.Gender, "Giới tính", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Item1.Gender, new { @class = "form-control", placeholder = "Nam/Nữ" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Item1.DateOfBirth, "Ngày sinh", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Item1.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Item1.Address, "Địa chỉ", new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Item1.Address, new { @class = "form-control", placeholder = "123 đường X, phường Y" })
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Tạo thông tin</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách bác sĩ -->
        <div class="row">
            <div class="col-md-12">
                <div class="card mt-4">
                    <div class="card-header">
                        <h3 class="fw-bold mb-3">Danh sách Nhân viên</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Ngày sinh</th>
                                    <th>Giới tính</th>
                                    <th>SĐT</th>
                                    <th>Email</th>
                                    <th>Địa chỉ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var patient in Model.Item2)
                                {
                                    <tr>
                                        <td>@patient.FullName</td>
                                        <td>@patient.DateOfBirth</td>
                                        <td>@patient.Gender</td>
                                        <td>@patient.Phone</td>
                                        <td>@patient.Email</td>
                                        <td>@patient.Address</td>
                                        <td>
                                            <a href="@Url.Action("EditPatient", "Admin", new { id = patient.UserId })" class="btn btn-warning btn-sm">Sửa</a>
                                            <a href="@Url.Action("DeletePatient", "Admin", new { id = patient.UserId })" class="btn btn-danger btn-sm">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    document.getElementById('searchInput').addEventListener('input', function () {
        let searchValue = this.value.toLowerCase();
        let table = document.getElementById('basic-datatables');
        let rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

        for (let i = 0; i < rows.length; i++) {
            let row = rows[i];
            let name = row.getElementsByTagName('td')[1].textContent.toLowerCase();
            let phone = row.getElementsByTagName('td')[2].textContent.toLowerCase();

            if (name.includes(searchValue) || phone.includes(searchValue)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        }
    });
</script>