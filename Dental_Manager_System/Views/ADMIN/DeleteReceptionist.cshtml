@model Dental_Manager.System.Models.User

@{
    ViewBag.Title = "Xóa nhân viên";
    Layout = "/Views/Shared/LayoutClient.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="card mt-4">
            <div class="card-header bg-danger text-white">
                <h3 class="fw-bold mb-3">Xóa nhân viên</h3>
            </div>
            <div class="card-body">
                <h5>Bạn có chắc muốn xóa nhân viên sau không?</h5>
                <table class="table table-bordered mt-3">
                    <tr>
                        <th>Họ và tên</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Điện thoại</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th>Địa chỉ</th>
                        <td>@Model.Address</td>
                    </tr>
                </table>

                @using (Html.BeginForm("DeleteReceptionist", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserId)

                    <button type="submit" class="btn btn-danger">Xóa</button>
                    <a href="@Url.Action("DanhSachNhanVien", "Admin")" class="btn btn-secondary">Hủy</a>
                }
            </div>
        </div>
    </div>
</div>
