@model Dental_Manager.System.Models.User

@{
    ViewBag.Title = "Sửa thông tin bác sĩ";
    Layout = "/Views/Shared/LayoutClient.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="card mt-4">
            <div class="card-header">
                <h3 class="fw-bold mb-3">Sửa thông tin bác sĩ</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("EditDoctor", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserId)

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.FullName, "Họ và Tên")
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.FullName)
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Phone, "Số điện thoại")
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Gender, "Giới tính")
                        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.DateOfBirth, "Ngày sinh")
                        @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Address, "Địa chỉ")
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                    <a href="@Url.Action("DanhSachBacSi", "Admin")" class="btn btn-secondary">Hủy</a>
                }
            </div>
        </div>
    </div>
</div>
